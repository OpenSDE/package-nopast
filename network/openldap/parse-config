if pkginstalled -f openldap; then
	# only when openldap is effectively installed
	pkgprefix -t openldap

	# FIXME! lib64 tweak - should be removed if we have proper symlinks
	[[ $libdir == *lib ]] || var_append GCC_WRAPPER_APPEND ' ' "-L$root$( pkgprefix libdir openldap )"

	if hasflag LDAP-QUIRK; then
		echo_warning "Injecting -L and -I to find openldap as requested."

		pkgprefix -t openldap
		LDAPINC="$root$( pkgprefix includedir openldap )"
		LDAPLIB="$root$( pkgprefix libdir openldap )"

		var_append GCC_WRAPPER_APPEND ' ' "-L$LDAPLIB"
		var_append CPP_WRAPPER_APPEND ' ' "-L$LDAPLIB"
		var_append GCC_WRAPPER_APPEND ' ' "-I$LDAPINC"
		var_append CPP_WRAPPER_APPEND ' ' "-I$LDAPINC"

		unset LDAPINC LDAPLIB
	fi
fi
