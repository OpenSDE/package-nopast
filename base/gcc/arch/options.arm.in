if [ "$SDECFG_ARM_OPT" != generic ]; then
	var_append GCC_WRAPPER_INSERT " " "-mcpu=$SDECFG_ARM_OPT"
else
	var_append GCC_WRAPPER_INSERT " " "-mabi=$SDECFG_ARM_ABI"
	var_append GCC_WRAPPER_INSERT " " "-m$SDECFG_ARM_ENDIANESS"
	var_append GCC_WRAPPER_INSERT " " "-march=$SDECFG_ARM_ARCH"
	var_append GCC_WRAPPER_INSERT " " "-mfloat-abi=$SDECFG_ARM_FLOAT_ABI"
	if [ "$SDECFG_ARM_FLOAT_ABI" == hard ]; then
		var_append GCC_WRAPPER_INSERT " " "-mfpu=$SDECFG_ARM_FPU"
	fi
fi

[ "$SDECFG_ARM_THUMB" = 1 ] &&
	var_append GCC_WRAPPER_INSERT " " "-mthumb -mthumb-interwork -D__arm__"

