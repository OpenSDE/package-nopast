if [ "$prefix_auto" = 1 ] ; then
	pkgprefix -t gtk+
	prefix=`pkgprefix gtk+`
	prefix_auto=0
	set_confopt
fi

# index.sgml is missing in almost all packages ...
#var_append confopt " " "--disable-gtk-doc"

# don't run a gtk test program which would try to acccess
# the X server
var_append confopt " " "--disable-gtktest"

# exclude some gconf files - so we do not need to patch every
# single package ...
#flistdel="$flistdel|${sysconfdir#/}/gtk-2.0/gdk-pixbuf.loaders"

# exclude files generated by gtk-update-icon-cache
flistdel="$flistdel|$prefix/share/icons/hicolor/icon-theme.cache"
# exclude hicolor directory
var_append flistdel '|' "$prefix/share/icons/hicolor$"

# include sub-package definitions
. $base/package/*/glib/glib-conf.in
