SSHDIR=/etc/ssh
mkdir -p $SSHDIR
for t in rsa1 dsa rsa; do
	case "$t" in
		rsa1)	keyfile=$SSHDIR/ssh_host_key ;;
		*)	keyfile=$SSHDIR/ssh_host_${t}_key ;;
	esac

	if [ ! -f $keyfile ]; then
		D_bindir/ssh-keygen -t $t -f $keyfile -N ''
	fi
done
