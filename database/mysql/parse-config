# only when mysql is effectively installed
if pkginstalled -f mysql; then
	pkgprefix -t mysql

	mysql_libdir="$root$( pkgprefix libdir mysql )"
	mysql_includedir="$root$( pkgprefix includedir mysql )"

	case "$pkg" in
		*)
			var_append extraconfopt " " "--with-mysql-lib=$mysql_libdir"
			var_append extraconfopt " " "--with-mysql-include=$mysql_includedir"
			;;
	esac

	var_append GCC_WRAPPER_APPEND " " "-L$mysql_libdir"

	unset mysql_libdir
	unset mysql_includedir
fi
